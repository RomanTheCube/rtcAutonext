<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>52.0</apiVersion>
    <isExposed>true</isExposed>

    <masterLabel>RTC Autonext</masterLabel>
    <description>Simple component to progress automatically to the next screen without user input</description>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>

    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="delay" type="Integer" label="Delay (ms)" description="Delay in milliseconds before progressing" default="1500"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>